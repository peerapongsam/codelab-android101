<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Widget.Button.Numpad">
        <item name="android:textColor">@color/color_num</item>
    </style>

    <style name="Widget.Button.Op">
        <item name="android:textColor">@color/color_op</item>
    </style>
</resources>
